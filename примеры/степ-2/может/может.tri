модуль может

импорт "стд::вывод"

тип Узел = класс {
    № := 0
    лев: мб Узел := пусто
    прав: мб Узел := пусто
}

фн сколько узлов(у: мб Узел): Цел64 {
    если у = пусто { вернуть 0 }
    вернуть 1 + сколько узлов(у^.лев) +  сколько узлов(у^.прав)
}

вход {
    пусть к1 = Узел{}
    пусть к2 = Узел{лев: Узел{}, прав: Узел{}}

    вывод.ф("$;\n", сколько узлов(к1))
    вывод.ф("$;\n", сколько узлов(к2))
    
    к1.лев := к2
    вывод.ф("$;\n", сколько узлов(к1))
}


