модуль асд-показ

импорт "стд::строки"
импорт "трик/асд"

тип Строки = []Строка

фн с-модуль*(мод: асд.Модуль): Строка {
    вернуть строки.ф("(модуль \"$;\" $;)$; $;", мод.имя, с-импорт(мод), с-описания(мод), с-вход(мод))
}

фн с-импорт(мод: асд.Модуль): Строка {
    пусть список = Строки[выделить: длина(мод.импорты)]
    
    цикл [№]имп среди мод.импорты {
        список.добавить(строки.ф("(импорт \"$;\")", имп.путь-импорта))
    }

    вернуть строки.ф("[$;]", строки.соединить("", список...))
}

фн с-вход(мод: асд.Модуль): Строка {

    надо мод.вход? # пусто иначе вернуть ""

    вернуть строки.ф("(вход $;)", с-список-операторов(мод.вход?^.тело))
}




